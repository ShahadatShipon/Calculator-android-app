<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="5dp"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context=".MainActivity">

        <TextView
            android:id="@+id/result"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="center"
            android:textAlignment="viewEnd"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/display"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="center"
            android:textAlignment="viewEnd"
            android:textSize="30dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/bc"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:layout_weight="80"
                android:background="#DFA2A3A0"
                android:text="C"
                android:gravity="center"
                android:textSize="30sp" />

            <Button
                android:id="@+id/bdev"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:layout_weight="80"
                android:background="#DFA2A3A0"
                android:text="/"
                android:gravity="center"
                android:textSize="30sp" />

            <Button
                android:id="@+id/bmul"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:layout_weight="80"
                android:background="#DFA2A3A0"
                android:text="X"
                android:textSize="30sp"
                android:gravity="center"/>

            <Button
                android:id="@+id/bdel"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:layout_weight="80"
                android:background="#DFA2A3A0"
                android:text="DEL"
                android:gravity="center"
                android:textSize="30sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/b7"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:layout_weight="80"
                android:background="#DFA2A3A0"
                android:gravity="center"
                android:text="7"
                android:textSize="30sp" />

            <Button
                android:id="@+id/b8"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:gravity="center"
                android:layout_weight="80"
                android:background="#DFA2A3A0"
                android:text="8"
                android:textSize="30sp" />

            <Button
                android:id="@+id/b9"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:layout_weight="80"
                android:background="#DFA2A3A0"
                android:text="9"
                android:gravity="center"
                android:textSize="30sp" />

            <Button
                android:id="@+id/bsub"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:layout_weight="80"
                android:gravity="center"
                android:background="#DFA2A3A0"
                android:text="-"
                android:textSize="30sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/b4"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:layout_weight="80"
                android:gravity="center"
                android:background="#DFA2A3A0"
                android:text="4"
                android:textSize="30sp" />

            <Button
                android:id="@+id/b5"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:layout_weight="80"
                android:gravity="center"
                android:background="#DFA2A3A0"
                android:text="5"
                android:textSize="30sp" />

            <Button
                android:id="@+id/b6"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:layout_weight="80"
                android:gravity="center"
                android:background="#DFA2A3A0"
                android:text="6"
                android:textSize="30sp" />

            <Button
                android:id="@+id/badd"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:layout_weight="80"
                android:gravity="center"
                android:background="#DFA2A3A0"
                android:text="+"
                android:textSize="30sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/b1"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:layout_weight="80"
                android:gravity="center"
                android:background="#DFA2A3A0"
                android:text="1"
                android:textSize="30sp" />

            <Button
                android:id="@+id/b2"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:layout_weight="80"
                android:gravity="center"
                android:background="#DFA2A3A0"
                android:text="2"
                android:textSize="30sp" />

            <Button
                android:id="@+id/b3"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:layout_weight="80"
                android:background="#DFA2A3A0"
                android:gravity="center"
                android:text="3"
                android:textSize="30sp" />

            <Button
                android:id="@+id/beq"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:layout_weight="80"
                android:gravity="center"
                android:background="#DFA2A3A0"
                android:text="="
                android:textSize="30sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/bm"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:layout_weight="80"
                android:background="#DFA2A3A0"
                android:gravity="center"
                android:text="%"
                android:textSize="30sp" />

            <Button
                android:id="@+id/b0"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:layout_weight="80"
                android:background="#DFA2A3A0"
                android:gravity="center"
                android:text="0"
                android:textSize="30sp" />

            <Button
                android:id="@+id/bp"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:layout_weight="80"
                android:background="#DFA2A3A0"
                android:gravity="center"
                android:text="."
                android:textSize="30sp" />

            <Button
                android:id="@+id/bac"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:layout_weight="80"
                android:background="#DFA2A3A0"
                android:gravity="center"
                android:text="Ï€"
                android:textSize="30sp" />

        </LinearLayout>




</LinearLayout>